@{
    Layout ="/Views/Shared/user_Layout.cshtml";
}

@{
    ViewBag.Title = "updateConfirm";
}

@model List<Epicurious.Models.epicrecipe>
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Update </title>
    <style>
    </style>
    <link rel="stylesheet" href="~/Content/css/style.css" type="text/css" media="screen">
    <link href="~/Content/assets/css/bootstrap-wysihtml5-hack.css" rel="stylesheet" />
    <link href="~/Content/assets/css/bootstrap-fileupload.min.css" rel="stylesheet">
    <script src="~/Content/assets/plugins/dataTables/dataTables.bootstrap.js"></script>
    <script src="~/Content/assets/plugins/dataTables/jquery.dataTables.js"></script>
    <link href="~/Content/assets/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet"/>
    <link href="~/Content/assets/plugins/bootstrap/css/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/assets/plugins/bootstrap/css/bootstrap-theme.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/assets/css/main.css" />
    <link rel="stylesheet" href="~/Content/assets/css/theme.css" />
    <link rel="stylesheet" href="~/Content/assets/css/MoneAdmin.css" />
    <link rel="stylesheet" href="~/Content/assets/plugins/Font-Awesome/css/font-awesome.css" />
    <link href="~/Content/assets/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div id="content">

        <div class="inner">

            <div class="row">
                <div class="col-lg-6">
                    <div class="panel panel-default">
                        
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th style="text-align:center; color:#a94442"><b>Id</b></th>
                                            <th style="text-align:center; color:#a94442"><b>Title</b></th>
                                            <th style="text-align:center; color:#a94442"><b>Intro</b></th>
                                            <th style="text-align:center; color:#a94442"><b>Unit</b></th>
                                            <th style="text-align:center; color:#a94442"><b>Serve Quantity</b></th>
                                            <th style="text-align:center; color:#a94442"><b>Act Time</b></th>
                                            <th style="text-align:center; color:#a94442"><b>Tot Time</b></th>
                                            <th style="text-align:center; color:#a94442"><b>Ingre Name </b></th>
                                            <th style="text-align:center; color:#a94442"><b>Ingre Quantity</b></th>
                                            <th style="text-align:center; color:#a94442"><b>Ingre Unit</b></th>
                                        </tr>
                                    </thead>
                                    @foreach (var p in Model)
                                    {
                                        <tr>
                                            <td style="text-align:center">@p.recipeid</td>
                                            <td style="text-align:center">@p.recipeTitle</td>
                                            <td style="text-align:center">@p.Introduction</td>
                                            <td style="text-align:center">@p.recipeUnit</td>
                                            <td style="text-align:center">@p.servingQuantity</td>
                                            <td style="text-align:center">@p.activeTime</td>
                                            <td style="text-align:center">@p.totaltime</td>
                                            <td style="text-align:center">@p.ingredName</td>
                                            <td style="text-align:center">@p.ingredQuantity</td>
                                            <td style="text-align:center">@p.ingredUnit</td>
                                            <td style="text-align:center">
                                                <form action="../Home/updaterecipe/@p.recipeid" onsubmit="return agree()">
                                                    <input type="submit" value="Update" style="border:none; border-radius:3px; color:red;font-weight:600" class="btn-warning" />
                                                </form>

                                        </tr>
                                    }


                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/assets/plugins/jquery-2.0.3.min.js"></script>
    <script src="~/Content/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/assets/plugins/modernizr-2.6.2-respond-1.1.0.min.js"></script>
    <!-- END GLOBAL SCRIPTS -->
    <script src="~/Content/assets/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="~/Content/assets/plugins/dataTables/dataTables.bootstrap.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>



</body>
</html>



